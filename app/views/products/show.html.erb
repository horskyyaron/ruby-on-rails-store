<h1><%= @product.name %></h1>

<%= link_to "Back", products_path %>
<%= link_to "Edit", edit_product_path(@product) %>


<!-- like link_to helper, here we have button_to helper. -->
<!-- button_to generates a form with a single button with the delete text -->
<!-- it will make a DELETE request to /products/:id which triggers destroy action -->

<%= button_to "Delete", @product, method: :delete, data: {turbo_confirm: "Are you sure?"} %>
